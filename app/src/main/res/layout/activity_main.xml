<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/lblnum1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Num 1:"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/lblnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 2:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/lblOperador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnum2"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:text="Operador:" />

     <EditText
        android:id="@+id/txtnum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblnum1"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-30dp" />

    <EditText
        android:id="@+id/txtnum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblnum2"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-39dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optOperadores"
        android:layout_marginTop="20dp"
        android:text="Calcular" />

    <TextView
        android:id="@+id/lblresultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCalcular"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Resultado:" />

    <RadioGroup
        android:id="@+id/optOperadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblOperador"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/opSuma"
            android:text="Suma"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/opResta"
            android:text="Resta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/opMulplicacion"
            android:text="Multiplicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/opDivision"
            android:text="Division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>





</RelativeLayout>